{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "paths": {
      "@trace/shared": ["../../packages/shared"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

